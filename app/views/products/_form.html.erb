<%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, class: "short" %>
    </div>
    <div class="field">
      <%= f.label :category_id %>
      <%= f.collection_select(:category_id, Category.collection(false), :code, :name) %>
    </div>
    <div class="field">
      <%= f.label :photo %>
      <%= f.file_field :photo %>
    </div>
    <div class="field">
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>
    <div class="field">
      <%= f.label :price_classic %>
      <%= f.text_field :price_classic %>
    </div>
    <div class="field">
      <%= f.label :price_big %>
      <%= f.text_field :price_big %>
    </div>
    <div class="field">
      <%= f.label :product_order %>
      <%= f.text_field :product_order %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
